{
  "openapi": "3.0.0",
  "info": {
    "title": "Rentx Documentation",
    "description": "This is an API Rent",
    "version": "1.0.0",
    "contact": { "email": "arturhronconi@gmail.com" }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a category",
        "description": "Create a new category for the with a name and a description for the an a vehicle",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              },
              "example": {
                "name": "SUV",
                "description": "Car SUV category"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Category already exists" } 
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "Get all categories",
        "description": "List all category informations",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "description": { "type": "string" }
                    }
                  }
                },
                "example": [
                  {
                    "id": "71ad19ae-07d3-4d88-9062-21b8dea4c646",
                    "name": "SUV",
                    "description": " Utilitario esportivo",
                    "created_at": "2021-05-26T03:17:17.707Z"
                  },
                  {
                    "id": "fac58a2f-9f23-4284-a582-a5ca8fa17803",
                    "name": "Sedan",
                    "description": " Automovel de 3 volumes",
                    "created_at": "2021-05-26T03:17:17.756Z"
                  },
                  {
                    "id": "29bf6364-910b-459e-8808-2929ec6badfb",
                    "name": "Hatch",
                    "description": " Carro curto",
                    "created_at": "2021-05-26T03:17:17.805Z"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Category"],
        "summary": "Upload new category",
        "description": "Upload new category",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                  "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Some category already exists"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specification"],
        "summary": "Create a specification",
        "description": "Create a new specification",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              },
              "example": {
                "name": "SUV",
                "description": "SUV specification"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Specification already exists"
          }
        }
      },
      "get": {
        "tags": ["Specification"]
      }
    },
    "/users/authenticate": {
      "post": {
        "tags": ["Users"],
        "summary": "Authentication user",
        "description": "Authentication user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "User",
                "properties": {
                  "email": { "type": "string" },
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              },
              "example": {
                "email": "arturhronconi@gmail.com",
                "username": "arturhr",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "success" },
          "400": { "description": "Email, username or password incorrect" }
        }
      }
    },
    "/cars": {
      "post": {
        "tags": ["Cars"],
        "summary": "Add a new car in the api",
        "description": "Create a new Car",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Cars"
              },
              "example": {
                "name": "Audi A3",
                "description": "Carro bonito",
                "daily_rate": 140,
                "license_plate": "DEF-33",
                "fine_amount": 100,
                "brand": "Audi",
                "category_id": "17daaa9e-c1e4-4e7a-900b-1e073a7ab692"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Car already exists" }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "Object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Cars": {
      "type": "Object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "daily_rate": { "type": "number" },
        "license_plate": { "type": "string" },
        "fine_amount": { "type": "number" },
        "brand": { "type": "string" },
        "category_id": { "type": "string" }
      }
    }
  },
  "components": {
    "securitySchemes": { 
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "berarerFormat": "JWT"
      }
    }
  }
}